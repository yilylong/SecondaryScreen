<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhl.secondaryscreen.view.ImageProgressBar
        android:id="@+id/progressBar"
        android:layout_width="240dp"
        android:layout_height="160dp"
        app:coverColor="@color/progress_cover_color"
        app:imagebg="@mipmap/progressbar_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128"
        app:roundConer="5dp"
        app:styleMode="mode_image_show" />

    <com.zhl.secondaryscreen.view.ImageProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="240dp"
        android:layout_height="160dp"
        app:coverColor="@color/progress_cover_color"
        app:imagebg="@mipmap/bg2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.717"
        app:roundConer="5dp"
        app:styleMode="mode_image_hidden" />


</android.support.constraint.ConstraintLayout>